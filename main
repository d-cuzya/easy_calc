#include <iostream>

void chek_error(char math_action, bool &error) {

	switch (math_action) {
	case '+':
		error = false;
		break;
	case '-':
		error = false;
		break;
	case '/':
		error = false;
		break;
	case '*':
		error = false;
		break;
	default:
		std::cout << "Ошибка! Вы ввели недопустимый символ! Повторите ещё раз!" << std::endl;
		error = true;
		break;
	}
}

int main() {
	setlocale(LC_ALL, "Russian");
	char math_action;
	bool error = false;
	float result, x, y;

	std::cout << "КАЛЬКУЛЯТОР" << std::endl;
	std::cout << "Ввидите что вы хотите сделать: +, -, *, /" << std::endl ;
	std::cin >> math_action;

	chek_error(math_action, error);
	
	while (error == true) {
		std::cout << "Ввидите что вы хотите сделать: +, -, *, /" << std::endl;
		std::cin >> math_action;
		chek_error(math_action, error);
	}

	std::cout << std::endl << "Отлично! Давай выберим 2 числа с которыми ты хочешь провести это действие!" << std::endl << "Число №1: ";
	std::cin >> x;
	std::cout << std::endl << "Число №2: ";
	std::cin >> y;
	std::cout << std::endl << "Результат: ";

	switch (math_action) {
	case '+':
		result = x + y;
		std::cout << result;
	case '-':
		result = x - y;
		std::cout << result;
	case '*':
		result = x * y;
		std::cout << result;
	case '/':
		result = x / y;
		std::cout << result;
	}
}
